<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="405px"
    android:layout_height="272px"
    android:layout_marginEnd="38px"
    android:background="@drawable/bg_item_home"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription,PxUsage">

    <ImageView
        android:id="@+id/image"
        android:layout_width="130px"
        android:layout_height="103px"
        android:layout_marginTop="59px"
        android:src="@drawable/ic_folder_local_videos" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        android:ellipsize="end"
        android:fontFamily="@string/font_roboto_medium"
        android:gravity="center"
        android:maxLines="1"
        android:maxWidth="250px"
        android:text="@string/lorem_ipsum"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="24px" />

</LinearLayout>