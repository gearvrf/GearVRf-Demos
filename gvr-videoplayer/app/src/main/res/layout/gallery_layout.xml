<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription,PxUsage,SpUsage">

    <ImageView
        android:layout_width="447px"
        android:layout_height="44px"
        android:layout_gravity="center"
        android:layout_marginBottom="41px"
        android:src="@drawable/ic_app_name_highlight" />

    <LinearLayout
        android:layout_width="@dimen/grid_width"
        android:layout_height="wrap_content"
        android:paddingEnd="8.5px"
        android:paddingStart="8.5px">

        <include layout="@layout/layout_breadcrumb" />

    </LinearLayout>

    <ScrollView
        android:layout_width="@dimen/grid_width"
        android:layout_height="@dimen/grid_height"
        android:layout_marginTop="37px"
        android:overScrollMode="never"
        android:paddingEnd="17px"
        android:paddingStart="0px"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/bg_media_container_scrollbar"
        android:scrollbars="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>

