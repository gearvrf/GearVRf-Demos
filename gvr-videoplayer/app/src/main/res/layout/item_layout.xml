<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="272px"
    android:layout_height="176px"
    android:layout_margin="8px"
    android:orientation="vertical"
    app:cardCornerRadius="32dp"
    app:cardMaxElevation="1dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/all_sides_rounded"
            android:src="@drawable/example" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".48"
            android:background="#000"
            android:gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="200px"
                android:layout_height="28px"
                android:layout_marginBottom="74px"
                android:layout_marginLeft="88.5px"
                android:layout_marginRight="87.5px"
                android:layout_marginTop="74px"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:maxLines="1"
                android:text="subtitles"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="24px"
                tools:ignore="HardcodedText,SpUsage" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
