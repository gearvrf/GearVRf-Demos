<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_gallery_item_album_normal" />
            <corners android:radius="6px" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_gallery_item_album_hovered" />
            <corners android:radius="6px" />
            <stroke android:width="4px" android:color="#FFFFFF" />
        </shape>
    </item>
</selector>