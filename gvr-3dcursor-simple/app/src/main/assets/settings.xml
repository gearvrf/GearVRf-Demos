<!--
  ~ This file defines an Object Cursor. To use the Object Cursor make sure this file is placed in
  ~ the assets folder and is named "settings.xml".
-->
<settings xmlns="http://www.w3schools.com/3DCursor"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.w3schools.com/3DCursor xml/settings_schema.xsd">
    <global onscreen="yes"
            preview="no"
            soundEnabled="yes"/>
    <theme name="Crystal Sphere"
           cursorType="object"
           id="crystal_sphere">
        <asset action="default"
               animated="no"
               soundEnabled="no"
               src="poly_sphere_default"
               type="3D"/>
        <asset action="click"
               animated="no"
               soundEnabled="no"
               src="poly_sphere_click"
               type="3D"/>
        <asset action="intersect"
               animated="no"
               soundEnabled="no"
               src="poly_sphere_collision"
               type="3D"/>
    </theme>
    <cursor name="Object Cursor"
            active="yes"
            position="center"
            themeId="crystal_sphere"
            type="object">
        <io deviceId="mouse"
            priority="1"
            productId="0"
            vendorId="0"/>
        <io deviceId="android_gamepad"
            priority="2"
            productId="1"
            vendorId="1"/>
        <io deviceId="gearvr"
            priority="3"
            productId="42240"
            vendorId="1256"/>
    </cursor>
</settings>
