<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btn_back"
        android:layout_width="43.2dp"
        android:layout_height="43.2dp"
        android:background="@drawable/bg_functions_buttons"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="15.8dp"
            android:src="@drawable/icon_back_sharing" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="#00000000"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_medium"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/editing_mode"
        android:textColor="#fff"
        android:textSize="20sp" />
</LinearLayout>