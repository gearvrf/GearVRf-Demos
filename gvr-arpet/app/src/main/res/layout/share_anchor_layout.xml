<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="640dp"
        android:layout_height="360dp"
        android:background="@drawable/bg_overlay">

        <ImageView
            android:id="@+id/point"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_point"
            android:visibility="gone" />

        <TextView
            android:id="@+id/message_stayInPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/stay_in_this_position"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/button_back_sharing"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_menu"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="20.5dp"
                android:src="@drawable/icon_back_sharing" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="73.3dp"
            android:layout_marginTop="45dp">

            <ImageView
                android:id="@+id/image_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_start_sharing" />

            <TextView
                android:id="@+id/quantity_guest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="430dp"
                android:fontFamily="@font/roboto_medium"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="@string/view_lets_start_status_text"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="21sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="190dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/spinner"
                android:layout_width="56.6dp"
                android:layout_height="58.3dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_loading"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ic_paired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="60dp"
            android:padding="10dp"
            android:src="@drawable/icon_paired"
            android:visibility="gone" />

        <Button
            android:id="@+id/status_sharing_anchor"
            android:layout_width="144dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/rounded_button"
            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:paddingEnd="31dp"
            android:paddingBottom="6dp"
            android:text="@string/connected"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="246dp"
            tools:ignore="ContentDescription, ButtonStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/host_button"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/common_text_host"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/guest_button"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/common_text_guest"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/common_text_cancel"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/try_button"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/common_text_retry"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/try_button_pairing_error"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/common_text_retry"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/cancel_button_back_share_anchor"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/common_text_cancel"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/disconnect_button"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/disconnect"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/spinner_waiting"
            android:layout_width="42.2dp"
            android:layout_height="43.4dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="215dp"
            android:src="@drawable/ic_loading"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="277dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_waiting_button"
                style="@style/Button"
                android:text="@string/common_text_cancel"
                android:visibility="gone" />

            <Button
                android:id="@+id/continue_button"
                style="@style/Button"
                android:layout_marginStart="17dp"
                android:text="@string/common_text_continue"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>