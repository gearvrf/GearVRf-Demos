<!--
This is a configuration file which contains settings of low quality for the purpose
of stable frame rate and power saving.
-->

<lens name="N4" >

    <vr-app-settings
        framebufferPixelsHigh="1280"
        framebufferPixelsWide="720"
        showLoadingIcon="true"
        useProtectedFramebuffer="false"
        useSrgbFramebuffer="false" >

        <mono-mode-parms
            monoFullScreen="false"
            monoMode="false" />

        <performance-parms
            cpuLevel="2"
            gpuLevel="2" />

        <mode-parms
            allowPowerSave="true"
            resetWindowFullScreen="true" />

        <eye-buffer-parms
            colorFormat="COLOR_8888"
            depthFormat="DEPTH_24"
            fov-y="90.0"
            multiSamples="0"
            resolutionWidth="512"
            resolutionHeight="512"
            resolveDepth="false" />

        <head-model-parms
            eyeHeight="DEFAULT"
            headModelDepth="DEFAULT"
            headModelHeight="DEFAULT"
            interpupillaryDistance="DEFAULT" />
    </vr-app-settings>

</lens>
