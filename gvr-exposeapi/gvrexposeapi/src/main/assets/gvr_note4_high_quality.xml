<!-- This is a sample configuration profile which is for high quality app with little 
consideration on frame rate and power consumption. -->

<lens name="N4" >

    <vr-app-settings
        framebufferPixelsHigh="2560"
        framebufferPixelsWide="1440"
        showLoadingIcon="true"
        useProtectedFramebuffer="false"
        useSrgbFramebuffer="true" >

        <mono-mode-parms
            monoFullScreen="false"
            monoMode="false" />

        <performance-parms
            cpuLevel="4"
            gpuLevel="4" />        
        
        <mode-parms
            allowPowerSave="true"
            resetWindowFullScreen="true" />

        <eye-buffer-parms
            colorFormat="COLOR_8888_sRGB"
            depthFormat="DEPTH_24_STENCIL_8"
            fov-y="90.0"
            multiSamples="4"
            resolutionWidth="1024"            
            resolutionHeight="1024"            
            resolveDepth="false" />

        <head-model-parms
            eyeHeight="DEFAULT"
            headModelDepth="DEFAULT"
            headModelHeight="DEFAULT"
            interpupillaryDistance="DEFAULT" />
    </vr-app-settings>

</lens>
